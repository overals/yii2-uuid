{
    "name": "p2made/yii2-uuid",
    "description": "A PHP 5.3+ library for generating RFC 4122 version 1, 3, 4, and 5 universally unique identifiers (UUID), wrapped as helpers for Yii 2 Framework.",
    "type": "yii2-extension",
    "keywords": [
        "yii2","extension","uuid", "identifier", "guid"
    ],
    "homepage": "https://github.com/p2made/yii2-uuid",
    "license": "MIT",
    "authors": [
        {
            "name": "Pedro Plowman",
            "email": "p2opensource@gmail.com",
            "homepage": "https://github.com/p2made"
        },
        {
            "name": "Ben Ramsey",
            "homepage": "http://benramsey.com"
        },
        {
            "name": "Marijn Huizendveld",
            "email": "marijn.huizendveld@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/p2made/yii2-uuid/issues",
        "source": "https://github.com/p2made/yii2-uuid"
    },

    "version": "2.0.4",
    "minimum-stability": "dev",

    "require": {
        "php": ">=5.3.3",
        "yiisoft/yii2": ">=2.0.4",
        "ramsey/uuid": "^2.8"
    },
    "require-dev": {
        "moontoast/math": "~1.1",
        "symfony/console": "~2.3",
        "doctrine/dbal": ">=2.3",
        "phpunit/phpunit": "~4.1",
        "satooshi/php-coveralls": "~0.6"
    },

    "bin": ["bin/uuid"],

    "suggest": {
        "moontoast/math": "Support for converting UUID to 128-bit integer (in string form).",
        "symfony/console": "Support for use of the bin/uuid command line tool.",
        "doctrine/dbal": "Allow the use of a UUID as doctrine field type."
    },
    "autoload": {
        "psr-4": {
            "p2made\\helpers\\Uuid\\": ""
        }
    }
}
